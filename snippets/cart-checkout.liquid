<div class="margin-top-4 border-top border-grey padding-top-4 large--margin-0 large--border-none large--padding-0">
  <p class="flex justify-between margin-top-0 margin-bottom-3 font-size-1 large--font-size-2">
    <span class="margin-right-3">Subtotal</span>
    <span class="font-weight-7">{{ cart.total_price | money }}</span>
  </p>

  <form action="/checkout" method="post" class="js-checkout-form" novalidate>
    <div class="flex items-center margin-bottom-3">
      <input type="checkbox" id="agree" />
      <label class="margin-left-2 font-size-1 font-weight-bold" for="agree">
        I agree with the <a class="link text-underline" href="/pages/terms-and-conditions">terms and conditions</a>.
      </label>
    </div>
    <button type="submit" name="checkout" class="button width-100 font-size-2">{{ checkout_button_text }}</button>
    <div class="input-group margin-top-3">
      <label for="special-instructions">Special Instructions:</label>
      <textarea class="js-cart-note" id="special-instructions" name="note">{{ cart.note }}</textarea>
    </div>
  </form>

  {%- if checkout_shipping -%}
    <p class="margin-top-3 margin-bottom-0 font-size-1 text-center">
      {{ checkout_shipping }}
    </p>
  {%- endif -%}

  {%- if checkout_help -%}
    <div class="rte-simple rte-center margin-top-4 font-size-1 text-center medium--font-size-2">
      {{ checkout_help }}
    </div>
  {%- endif -%}
</div>
