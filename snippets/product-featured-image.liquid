{% if product.metafields.custom_fields['featured_image'] != blank %}
    <div class="aspect-ratio-1x1 large--aspect-ratio-21x9 relative">
        <div class="absolute absolute-fill">
            <img class="width-100 object-fit-cover object-position-center" data-src="{{ product.metafields.custom_fields['featured_image'] }}">
        </div>
    </div>
{% endif %}